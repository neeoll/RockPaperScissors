<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="rps_icon" parent="Theme.AppCompat.Light">
        <item name="android:layout_width">150dp</item>
        <item name="android:layout_height">150dp</item>
        <item name="android:padding">40dp</item>
    </style>

    <style name="Rock" parent="rps_icon">
        <item name="android:background">@drawable/icon_border_red</item>
        <item name="android:src">@drawable/icon_rock</item>
    </style>

    <style name="Paper" parent="rps_icon">
        <item name="android:background">@drawable/icon_border_blue</item>
        <item name="android:src">@drawable/icon_paper</item>
    </style>

    <style name="Scissors" parent="rps_icon">
        <item name="android:background">@drawable/icon_border_yellow</item>
        <item name="android:src">@drawable/icon_scissors</item>
    </style>


</resources>